<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.hello_android">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Hello_android"
        tools:targetApi="31">
        <activity
            android:name=".recyclerview.PuRecyclerViewActivity"
            android:exported="false" />
        <activity
            android:name=".recyclerview.GridRecyclerViewActivity"
            android:exported="false" />
        <activity
            android:name=".recyclerview.HorRecyclerViewActivity"
            android:exported="false" />
        <activity
            android:name=".recyclerview.LinearRecyclerViewActivity"
            android:exported="false" />
        <activity
            android:name=".recyclerview.RecyclerViewActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Hello_android.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- <activity android:name="com.example.hello_android.listview.ListViewActivity"></activity> -->
        <!-- .表示包名，所以也可以写成 -->
        <activity android:name=".listview.ListViewActivity" />
        <activity android:name=".gridview.GridviewActivity" />
        <activity android:name=".ScrollViewActivity" />
    </application>

</manifest>